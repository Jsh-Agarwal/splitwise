# SplitEase Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
# PostgreSQL connection string
# Format: postgresql+asyncpg://username:password@host:port/database_name
# Example for local PostgreSQL: postgresql+asyncpg://postgres:password@localhost:5432/splitwise
# Example for Render PostgreSQL: postgresql+asyncpg://user:pass@dpg-xxxxx-a.oregon-postgres.render.com/database_xxxxx
DATABASE_URL=postgresql+asyncpg://username:password@host:port/database_name

# FastAPI Configuration
# Environment: development, staging, production
ENVIRONMENT=development

# Server Configuration
# Port for the FastAPI server (default: 8000)
PORT=8000

# Security Configuration (Optional - for future authentication features)
# SECRET_KEY=your-secret-key-here
# ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging Configuration (Optional)
# LOG_LEVEL=INFO

# CORS Configuration (Optional - if you need specific origins)
# FRONTEND_URL=http://localhost:3000

# Database Pool Configuration (Optional - for production tuning)
# DB_POOL_SIZE=10
# DB_MAX_OVERFLOW=20
# DB_POOL_TIMEOUT=30
# DB_POOL_RECYCLE=3600

# Example Production Configuration for Render:
# DATABASE_URL=postgresql+asyncpg://splitwise_user:your_password@dpg-xxxxxxxxx-a.oregon-postgres.render.com/splitwise_db
# ENVIRONMENT=production
# PORT=10000

# Example Local Development Configuration:
# DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/splitwise_local
# ENVIRONMENT=development
# PORT=8000
